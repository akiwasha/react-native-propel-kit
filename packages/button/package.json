{
  "name": "@mgcrea/react-native-button",
  "version": "0.9.2",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run build:source && npm run build:typings",
    "build:source": "NODE_ENV=production babel --verbose --source-maps --extensions .js,.ts,.tsx --out-dir lib/ --delete-dir-on-start --ignore **/__tests__ src/",
    "build:typings": "NODE_ENV=production tsc --declaration",
    "typecheck": "tsc --pretty --noEmit",
    "test": "CI=true jest --runInBand --colors"
  },
  "peerDependencies": {
    "@babel/runtime": ">=7",
    "react": ">=16.8",
    "react-native": ">=0.59"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@storybook/react-native": "^6.0.1-alpha.6",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "@types/react-native": "^0.66.1",
    "@types/react-test-renderer": "^17.0.1",
    "react": "^17.0.2",
    "react-native": "^0.66.1",
    "react-native-testing-library": "^2.2.0",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.4.4"
  }
}
